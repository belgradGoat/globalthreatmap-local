{
  "name": "globalthreatmap-local",
  "version": "1.0.0",
  "description": "Self-hosted global threat intelligence dashboard - runs entirely on local LLMs and RSS feeds, no cloud APIs required",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:network": "concurrently \"npm run dev:backend\" \"npm run dev:frontend:network\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:frontend:network": "cd frontend && npm run dev:network",
    "dev:backend": "cd backend && npm start",
    "start": "npm run dev",
    "start:network": "npm run dev:network",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "build": "cd frontend && npm run build",
    "lint": "cd frontend && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "threat-intelligence",
    "osint",
    "geopolitics",
    "news-aggregation",
    "security",
    "map-visualization",
    "self-hosted",
    "local-llm",
    "rss-feeds"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sebastianszewczyk/globalthreatmap-local"
  },
  "author": "Sebastian Szewczyk",
  "license": "MIT"
}
